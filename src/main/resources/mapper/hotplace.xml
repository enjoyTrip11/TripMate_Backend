<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.tripmate.place.dao.HotPlaceDao">

    <select id="searchByBoardUser" parameterType="map" resultType="HotPlace">
        SELECT *
        FROM hotplace
        where boardId = #{boardId}
          and userId = #{userId}
    </select>

    <select id="searchById" parameterType="int" resultType="HotPlace">
        SELECT *
        FROM hotplace
        where hotplaceId = #{hotplaceId}
    </select>

    <insert id="insert" parameterType="map" useGeneratedKeys="true" keyProperty="hotplaceId">
        INSERT INTO hotplace (userId, locationId)
        VALUES (#{userId}, #{locationId})
    </insert>

    <delete id="delete" parameterType="int">
        DELETE
        FROM hotplace
        WHERE hotplaceId = #{hotplaceId}
    </delete>

    <select id="countHotPlaceHits" resultType="int" parameterType="int">
        SELECT COUNT(*)
        FROM hotplace
        WHERE locationId = #{placeId}
    </select>

    <select id="searchHotPlaceByUser" resultType="Place" parameterType="int">
        SELECT p.*
        FROM place p
                 JOIN hotplace h ON p.locationId = h.locationId
        WHERE h.userId = #{userId}
    </select>

    <select id="searchAllHotPlace" resultType="HotPlaceResponseDto">
        SELECT p.*, COUNT(h.locationId) AS hits
        FROM place p
                 JOIN hotplace h ON p.locationId = h.locationId
        GROUP BY p.locationId
    </select>

</mapper>
